<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="plugin.video.benjiplay"
  name="Benji Play"
  version="1.0.0"
  provider-name="Benji">

  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <extension
    point="xbmc.python.pluginsource"
    library="default.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary>Entretenimento direto ao ponto</summary>
    <description>
      Benji Play é um addon de vídeo simples, rápido e funcional.
      Interface limpa e navegação objetiva para quem sabe o que quer assistir.
    </description>
    <platform>all</platform>
  </extension>

</addon>